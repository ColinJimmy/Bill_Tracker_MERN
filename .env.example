# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai_bill_summarizer
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ai_bill_summarizer

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRE=7d

# AI Service Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# OCR Configuration (if using external service instead of Tesseract.js)
OCR_API_KEY=your_ocr_api_key_here_if_needed

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,application/pdf

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
